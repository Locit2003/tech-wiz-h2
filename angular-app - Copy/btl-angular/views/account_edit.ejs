<%- include('header') %>

    <div class="container">
        <form action="/account_edit" method="POST" role="form">
            <legend>Form chỉnh sửa tài khoản</legend>
            <div class="form-group">
                <label for="">Tên người dùng</label>
                <input type="text" class="form-control" name="name" value="<%= data.name%>">
            </div>
            <div class="form-group">
                <label for="">Địa chỉ email</label>
                <input type="email" class="form-control" name="email" value="<%= data.email%>">
            </div>
            <div class="form-group">
                <label for="">Password</label>
                <input type="password" class="form-control" name="password" value="<%= data.password%>">
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </form>
    </div>

    <%- include('footer') %>
        <script>
            tours_form.onsubmit = function () {
                if (tours_form.name.value == '') {
                    tours_form.name.style.border = '1px solid red';
                    name_error.innerHTML = 'Không được để trống';
                    tours_form.name.focus();
                    return false;
                } else {
                    name_error.innerHTML = '';
                    tours_form.name.style.border = '1px solid lightblue';
                };

                if (tours_form.price.value == '') {
                    tours_form.price.style.border = '1px solid red';
                    price_error.innerHTML = 'Không được để trống';
                    tours_form.price.focus();
                    return false;
                } else {
                    price_error.innerHTML = '';
                    tours_form.price.style.border = '1px solid lightblue';
                };

                if (tours_form.sale_price.value == '') {
                    tours_form.sale_price.style.border = '1px solid red';
                    sl_error.innerHTML = 'Không được để trống';
                    tours_form.sale_price.focus();
                    return false;
                } else {
                    sl_error.innerHTML = '';
                    tours_form.sale_price.style.border = '1px solid lightblue';
                };

                if (tours_form.image.value == '') {
                    tours_form.image.style.border = '1px solid red';
                    img_error.innerHTML = 'Không được để trống';
                    tours_form.image.focus();
                    return false;
                } else {
                    img_error.innerHTML = '';
                    tours_form.image.style.border = '1px solid lightblue';
                };

                if (tours_form.description.value == '') {
                    tours_form.description.style.border = '1px solid red';
                    d_error.innerHTML = 'Không được để trống';
                    tours_form.description.focus();
                    return false;
                } else {
                    d_error.innerHTML = '';
                    tours_form.description.style.border = '1px solid lightblue';
                };
            }
        </script>